{
    "puppet_task_version": 1,
    "supports_noop": false,
    "description": "Write content to a file.",
    "files": ["ruby_task_helper/files/task_helper.rb"],
    "input_method": "stdin",
    "parameters": {
      "filepath": {
        "type": "String[1]",
        "description": "Full path to file to be written."
      },
      "content": {
        "type": "String[1]",
        "description": "Content to write to file."
      },
      "owner": {
        "type": "Optional[String[1]]",
        "description": "Optional owner of the file."
      },
      "group": {
        "type": "Optional[String[1]]",
        "description": "Optional group of the file."
      }
    }
  }